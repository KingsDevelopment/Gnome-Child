{
  "compilerOptions": {
		"moduleResolution": "node",
		"module": "commonjs",
    "target": "es2017",
    "emitDecoratorMetadata": true,
		"lib": [
			"es2017",
			"dom"
		],
		"sourceMap": false,
		"allowJs": true,
		"removeComments": true,
		"experimentalDecorators": true,
    "outDir": "dist",
    "noImplicitAny": false
  },
  "include": [
    "src/**/*", "SyncMonitor.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "node_modules/*",
    "node_modules/**/*",
    ".vscode"
  ]
}
